<!DOCTYPE html>
<html lang="en">
<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div id="add-main">
        <form action="/add" method="post">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Name</label>
                <input type="text" class="form-control inputs" id="exampleFormControlInput1" placeholder="Your Name" name="usersName">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Blog Title</label>
                <input type="text" class="form-control inputs" id="exampleFormControlInput1" placeholder="Your Blog Title" name="blogTitle">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Blog</label>
                <textarea class="form-control inputs" id="exampleFormControlTextarea1 blog-input" rows="8" name="blogText" placeholder="Enter your thoughts here..."></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>    
        </form>
        
    </div>
    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>